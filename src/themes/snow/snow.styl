inputHeight = 16px
inputMargin = 3px
inputPadding = 4px
blackColor = #454545
blueColor = #06c
grayColor = #ccc
lightGrayColor = #ddd
fontNamePickerWidth = 98px
fontSizePickerWidth = 75px
pickerPadding = 8px
pickerWidth = 50px
toolbarPadding = 8px

@font-face
  font-family: 'fa-editor'
  font-style: normal
  font-weight: normal
  src: url('assets/fa-editor.eot') format('embedded-opentype'), url('assets/fa-editor.woff') format('woff')

.sc-toolbar-container
  box-sizing: border-box
  color: blackColor
  font-family: 'Helvetica', 'Arial', sans-serif
  padding: toolbarPadding (15px - pickerPadding) (toolbarPadding - 3px)
  user-select: none
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  .sc-format-group
    box-sizing: content-box
    display: inline-block
    float: left
    line-height: inputHeight
    margin-right: 15px
  .sc-format-button
    background-position: center center
    background-repeat: no-repeat
    box-sizing: content-box
    cursor: pointer
    font-family: 'fa-editor'
    font-size: 12px
    display: inline-block
    float: left
    height: inputHeight
    margin-left: inputMargin
    margin-right: inputMargin
    padding: inputPadding
    text-align: center
    width: 16px
  .sc-format-separator
    background-color: lightGrayColor
    box-sizing: content-box
    display: inline-block
    float: left
    height: inputHeight
    margin-bottom: inputPadding
    margin-top: inputPadding
    width: 1px
.sc-toolbar-container:after
  clear: both
  content: ""
  display: table

.sc-picker
  box-sizing: content-box
  font-size: 13px
  display: inline-block
  font-weight: bold
  position: relative
  .sc-picker-label
    background: url('assets/arrows.png') no-repeat (pickerWidth - 2*pickerPadding) center
    box-sizing: content-box
    cursor: pointer
    padding: inputPadding pickerPadding
  .sc-picker-label.sc-active, .sc-picker-label:hover
    background-image: url('assets/arrows-active.png')
    color: blueColor
  .sc-picker-options
    background-color: #fff
    box-sizing: content-box
    display: none
    padding: inputPadding pickerPadding
    position: absolute
    .sc-picker-item
      box-sizing: content-box
      cursor: pointer
      padding-bottom: inputPadding
      padding-top: inputPadding
    .sc-picker-item.selected, .sc-picker-item:hover
      color: blueColor
.sc-picker.sc-expanded
  .sc-picker-label
    background-image: url('assets/arrows-inactive.png')
    border: 1px solid grayColor
    color: grayColor
    margin: -1px
  .sc-picker-options
    border: 1px solid grayColor
    box-shadow: rgba(0,0,0,0.2) 0 2px 8px
    display: block
    margin: -1px

.sc-picker.sc-color-picker
  float: left
  .sc-picker-label
    background-position: center center
  .sc-picker-options
    height: 106px
    margin-left: inputMargin
    margin-top: 24px
    padding: 6px
    position: absolute
    width: 140px
    .sc-picker-item
      float: left
      height: 16px
      margin: 2px
      padding: 0px
      width: 16px
    .sc-picker-item.selected, .sc-picker-item:hover
      border: 1px solid #000
      margin: 1px
.sc-picker.sc-color-picker.sc-expanded
  .sc-picker-label
    margin-left: inputMargin - 1px
    margin-right: inputMargin - 1px
  .sc-picker-options
    margin-left: inputMargin - 1px

.sc-toolbar-container
  .sc-format-button:hover, .sc-format-button.sc-active, .sc-format-button.sc-on
    color: blueColor
  .sc-format-button.sc-bold:before
    content: "\e801"
    font-weight: bold
  .sc-format-button.sc-italic:before
    content: "\e802"
  .sc-format-button.sc-underline:before
    content: "\e80f"
  .sc-format-button.sc-strike:before
    content: "\e80e"
  .sc-format-button.sc-link:before
    content: "\e813"
  .sc-format-button.sc-authorship:before
    content: "\e816"

  .sc-font-name
    width: fontNamePickerWidth
    .sc-picker-label
      background-position: (fontNamePickerWidth - 2*pickerPadding) center
    .sc-picker-options
      width: fontNamePickerWidth - 2*pickerPadding
  .sc-font-size
    width: fontSizePickerWidth
    .sc-picker-label
      background-position: (fontSizePickerWidth - 2*pickerPadding) center
    .sc-picker-options
      width: fontSizePickerWidth - 2*pickerPadding

  .sc-fore-color, .sc-back-color
    .sc-picker-options
      .sc-picker-item.sc-primary-color
        margin-bottom: 8px
      .sc-picker-item.sc-primary-color.sc-selected, .sc-picker-item.sc-primary-color:hover
        margin-bottom: 7px

  for $format in fore-color back-color
    .sc-picker.sc-{$format} .sc-picker-label
      background-image: url('assets/' + $format + '.png')
    .sc-picker.sc-{$format} .sc-picker-label.sc-active, .sc-picker.sc-{$format} .sc-picker-label:hover, .sc-picker.sc-{$format}.sc-expanded .sc-picker-label
      background-image: url('assets/' + $format + '-active.png')
