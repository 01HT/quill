.ql-container
  box-sizing: border-box
  cursor: text
  font-family: Helvetica, 'Arial', sans-serif
  font-size: 13px
  height: 100%
  line-height: 1.42
  margin: 0px
  overflow-x: hidden
  overflow-y: auto
  padding: 12px 15px
  position: relative

.ql-paste-manager
  left: -100000px
  position: absolute
  top: 50%

.ql-toolbar
  box-sizing: border-box

.ql-editor
  box-sizing: border-box
  min-height: 100%
  outline: none
  tab-size: 4
  white-space: pre-wrap
  p
    margin: 0
    padding: 0
  img
    max-width: 100%
  blockquote, ol, ul
    margin: 0 0 0 2em
    padding: 0
  ol
    list-style-type: decimal
  ul
    list-style-type: disc
