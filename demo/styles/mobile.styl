html, body
  height: 100%

#content-container
  position: relative
  height: 100%

#formatting-container
  background-color: #fff
  border-bottom: 1px solid #ccc
  height: 34px
  width: 100%

  .format-button
    background-position: center center
    background-repeat: no-repeat
    cursor: pointer
    display: inline-block
    float: left
    width: 25%
    height: 34px

  for $format in bold italic strike underline
    .format-button.{$format}
      background-image: url('../images/' + $format + '.png')
    .format-button.{$format}:hover, .format-button.{$format}.active
      background-image: url('../images/' + $format + '-active.png')

#editor-container
  bottom: 4px   // Some reason vertical scrollbars appear without 4px compensation
  position: absolute
  top: 35px
  width: 100%
