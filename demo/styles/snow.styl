blueColor = #06c
grayColor = #ccc
lightGrayColor = #ddd
fontNamePickerWidth = 98px
fontSizePickerWidth = 75px
pickerPadding = 8px
pickerWidth = 50px

.toolbar-container
  border-bottom: 1px solid grayColor
  font-family: 'Helvetica', 'Arial', sans-serif
  font-size: 12px
  height: 36px
  line-height: 32px
  padding: 0px (15px - pickerPadding)
  user-select: none
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  .format-group
    display: inline-block
    height: 24px
    line-height: 24px
    margin-right: 15px
    margin-top: 4px
    vertical-align: middle
  .format-button
    background-position: center center
    background-repeat: no-repeat
    cursor: pointer
    display: inline-block
    height: 16px
    padding: 0px 7px
    vertical-align: middle
    width: 16px
  .format-separator
    border-right: 1px solid lightGrayColor


.picker
  display: inline-block
  font-weight: bold
  position: relative
  .picker-label
    background: url('../images/arrows.png') no-repeat (pickerWidth - 2*pickerPadding) center
    cursor: pointer
    padding: 1px pickerPadding
  .picker-label.active, .picker-label:hover
    background-image: url('../images/arrows-active.png')
    color: blueColor
  .picker-options
    background-color: #fff
    display: none
    padding: 1px pickerPadding
    .picker-item
      cursor: pointer
    .picker-item.selected, .picker-item:hover
      color: blueColor
.picker.expanded
  .picker-label
    background-image: url('../images/arrows-inactive.png')
    border: 1px solid grayColor
    color: grayColor
    margin: -1px
  .picker-options
    border: 1px solid grayColor
    box-shadow: rgba(0,0,0,0.2) 0 2px 8px
    display: block
    margin: -1px

.picker.color-picker
  .picker-label
    background-position: center center
    padding: 2px pickerPadding
  .picker-options
    height: 106px
    padding: 6px
    position: absolute
    width: 140px
    .picker-item
      float: left
      height: 16px
      margin: 2px
      width: 16px
    .picker-item.selected, .picker-item:hover
      border: 1px solid #000
      margin: 1px


.font-name
  width: fontNamePickerWidth
  .picker-label
    background-position-x: fontNamePickerWidth - 2*pickerPadding

.font-size
  width: fontSizePickerWidth
  .picker-label
    background-position-x: fontSizePickerWidth - 2*pickerPadding

.fore-color, .back-color
  .picker-options
    .picker-item.primary-color
      margin-bottom: 8px
    .picker-item.primary-color.selected
      margin-bottom: 7px

for $format in fore-color back-color
  .{$format} .picker-label
    background-image: url('../images/' + $format + '.png')
  .{$format} .picker-label.active, .{$format} .picker-label:hover, .{$format}.expanded .picker-label
    background-image: url('../images/' + $format + '-active.png')


for $format in bold italic strike underline list bullet outdent indent link attribution
  .format-button.{$format}
    background-image: url('../images/' + $format + '.png')
  .format-button.{$format}:hover, .{$format}:active, .{$format}.active
    background-image: url('../images/' + $format + '-active.png')
