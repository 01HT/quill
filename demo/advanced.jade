doctype 5
html
  head
    title Stypi Pretty Editor Demo
    link(rel='stylesheet', type='text/css', href='styles/reset.css')
    link(rel='stylesheet', type='text/css', href='styles/advanced.css')
    meta(charset='utf-8')

  body
    #content-container
      each num in [1, 2]
        .editor-wrapper(class=(num == 1 ? 'first' : 'last'))
          #formatting-container.formatting-container
            .format-group
              select.font-name
                option(value='sans-serif', selected=true) Sans Serif
                option(value='serif') Serif
                option(value='monospace') Monospace
            .format-group
              select.font-size
                option(value='small') Small
                option(value='normal', selected=true) Normal
                option(value='large') Large
                option(value='huge') Huge
            .format-group
              select.fore-color
                option(value='black', selected=true)
                option(value='white')
                option(value='red')
                option(value='blue')
                option(value='lime')
                option(value='teal')
                option(value='magenta')
                option(value='yellow')
              select.back-color
                option(value='black')
                option(value='white', selected=true)
                option(value='red')
                option(value='blue')
                option(value='lime')
                option(value='teal')
                option(value='magenta')
                option(value='yellow')
            .format-group
              .format-button.bold
              .format-button.italic
              .format-button.underline
              .format-button.strike
            .format-group
              .format-button.link
            .format-group
              .format-button.attribution
          #editor-container.editor-container
            include content

    script(type='text/javascript', src='../scribe.all.js')
    script(type='text/javascript', src='scripts/advanced.js')
