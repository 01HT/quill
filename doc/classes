insert(index, text)
  texts = text.split("\n")
  [line, offset] = @doc.findLineAtOffset(index)
  _.each(texts, (text, i) ->
    line.insertText(text)
    if i < texts.length - 1
      newline = line.split(offset + text.length)
      line = newLine
      offset = 0
  )

delete(index, length)


