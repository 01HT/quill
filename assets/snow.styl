activeColor = #06c
borderColor = #ccc
backgroundColor = #fff
inactiveColor = #444
shadowColor = #ddd
textColor = #444

@import './core'
@import './snow/*'

.ql-container.ql-snow
  a
    color: activeColor
  code
    background-color: #f0f0f0
    border-radius: 3px
    font-size: 85%
    padding-bottom: 2px
    padding-top: 2px
    &:before, &:after
      content: "\00a0"
      letter-spacing: -2px
  *
    box-sizing: border-box

  border: 1px solid borderColor
