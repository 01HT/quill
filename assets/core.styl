LIST_STYLE = decimal lower-alpha lower-roman
MAX_INDENT = 8

resets(arr)
  unquote('list-' + join(' list-', arr))

.ql-container
  box-sizing: border-box
  cursor: text
  font-family: Helvetica, 'Arial', sans-serif
  font-size: 13px
  height: 100%
  line-height: 1.42
  margin: 0px
  overflow-x: hidden
  overflow-y: auto
  padding: 12px 15px
  position: relative

.ql-clipboard
  left: -100000px
  position: absolute
  top: 50%

.ql-editor
  box-sizing: border-box
  min-height: 100%
  outline: none
  tab-size: 4
  white-space: pre-wrap
  img
    max-width: 100%
  p
    margin: 0
    padding: 0

  p, ol, ul, pre, blockquote
    counter-reset: resets(1..MAX_INDENT)
  ol
    list-style-type: none
    li
      counter-increment: unquote('list-' + num)
      &:before
        content: unquote('counter(list-' + num + ', ' + LIST_STYLE[0] + ')') '. '
      counter-reset: resets(1..MAX_INDENT)
    for num in (1..MAX_INDENT)
      li.ql-indent-{num}
        counter-increment: unquote('list-' + num)
        &:before
          content: unquote('counter(list-' + num + ', ' + LIST_STYLE[num%3] + ')') '. '
      if (num < MAX_INDENT)
        li.ql-indent-{num}
          counter-reset: resets((num+1)..MAX_INDENT)
  ol, ul
    margin: 0
    padding-left: 20px
  for num in (1..MAX_INDENT)
    .ql-indent-{num}
      padding-left: (40 * num)px

  .ql-bg-black
    background-color: rgb(0,0,0);
  .ql-bg-red
    background-color: rgb(230,0,0);
  .ql-bg-orange
    background-color: rgb(255,153,0);
  .ql-bg-yellow
    background-color: rgb(255,255,0);
  .ql-bg-green
    background-color: rgb(0,138,0);
  .ql-bg-blue
    background-color: rgb(0,102,204);
  .ql-bg-purple
    background-color: rgb(153,51,255);

  .ql-color-white
    color: rgb(255,255,255);
  .ql-color-red
    color: rgb(230,0,0);
  .ql-color-orange
    color: rgb(255,153,0);
  .ql-color-yellow
    color: rgb(255,255,0);
  .ql-color-green
    color: rgb(0,138,0);
  .ql-color-blue
    color: rgb(0,102,204);
  .ql-color-purple
    color: rgb(153,51,255);

  .ql-font-serif
    font-family: Times New Roman, serif;
  .ql-font-monospace
    font-family: Monaco, Courier New, monospace;

  .ql-size-small
    font-size: 10px;
  .ql-size-large
    font-size: 18px;
  .ql-size-huge
    font-size: 32px;
